<style>

  .pagination a { color: black; float: left; padding: 8px 16px; text-decoration:
  none; font-size: 15px;}
</style>

<nav class="pagination" role="navigation" style="justify-content:flex-end;">
  {{#if prev}}
    <a class="newer-posts" href="{{page_url prev}}">&laquo;</a>
  {{/if}}
  <a class="page-number">Page {{page}} of {{pages}}</a>
  {{#if next}}
    <a class="older-posts" href="{{page_url next}}">&raquo;</a>
  {{/if}}
</nav>